<script>
  const COOKIE_KEY = "cookie_consent";
  const BANNER_ID = "1";

  // ğŸª Zapisz preferencje cookies
  function setCookieConsent(value) {
    const expires = new Date(Date.now() + 180 * 24 * 60 * 60 * 1000).toUTCString(); // 180 dni
    document.cookie = `${COOKIE_KEY}=${value}; expires=${expires}; path=/`;
    hideCookieBanner();
  }

  // ğŸª Pobierz aktualnÄ… zgodÄ™
  function getCookieConsent() {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${COOKIE_KEY}=`);
    return parts.length === 2 ? parts.pop().split(";").shift() : null;
  }

  // ğŸ” Ukryj baner po zapisaniu wyboru
  function hideCookieBanner() {
    const banner = document.getElementById(BANNER_ID);
    if (banner) banner.style.display = "none";
  }

  // âœ… ObsÅ‚uga klikniÄ™Ä‡ przyciskÃ³w
  document.addEventListener("DOMContentLoaded", function () {
    const consent = getCookieConsent();

    // JeÅ›li jest zgoda - ukryj baner
    if (consent) {
      hideCookieBanner();
      return;
    }

    // PokaÅ¼ baner, jeÅ›li nie ma zgody
    const banner = document.getElementById(BANNER_ID);
    if (banner) banner.style.display = "block";

    // Tylko niezbÄ™dne
    const btnEssential = document.getElementById("2");
    if (btnEssential) {
      btnEssential.addEventListener("click", function () {
        setCookieConsent("essential");
      });
    }

    // Wszystkie cookies
    const btnAll = document.getElementById("3");
    if (btnAll) {
      btnAll.addEventListener("click", function () {
        setCookieConsent("all");
        // MoÅ¼esz tu dodaÄ‡ dodatkowe logiki jak Analytics
      });
    }
  });
</script>
